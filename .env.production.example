# =================================================================
# FIXIA - PRODUCTION ENVIRONMENT VARIABLES
# =================================================================
# This file contains production-specific environment variables
# DO NOT commit actual secrets - use your deployment platform's secret management

# =================================================================
# DATABASE CONFIGURATION - PRODUCTION
# =================================================================
# Railway PostgreSQL connection string
DATABASE_URL="postgresql://postgres:RAILWAY_GENERATED_PASSWORD@RAILWAY_HOST:RAILWAY_PORT/railway"

# =================================================================
# JWT AUTHENTICATION - PRODUCTION
# =================================================================
# Strong, unique JWT secret for production
# Generate using: openssl rand -base64 64
JWT_SECRET="SUPER_STRONG_JWT_SECRET_FOR_PRODUCTION_64_CHARS_OR_MORE"
JWT_EXPIRES_IN="7d"

# =================================================================
# API CONFIGURATION - PRODUCTION
# =================================================================
NODE_ENV="production"
PORT="3001"
API_PREFIX=""

# Production CORS origins
ALLOWED_ORIGINS="https://fixia.com.ar,https://www.fixia.com.ar"

# =================================================================
# FRONTEND CONFIGURATION - PRODUCTION
# =================================================================
# Production API URL
VITE_API_URL="https://api.fixia.com.ar"
VITE_APP_NAME="Fixia"
VITE_APP_VERSION="1.0.0"

# IMPORTANT: Always use www.fixia.app for FRONTEND_URL to prevent 301 redirects
# from losing path information (e.g., verification tokens in email links)
FRONTEND_URL="https://www.fixia.app"

# =================================================================
# SECURITY CONFIGURATION
# =================================================================
# Force HTTPS in production
FORCE_HTTPS="true"

# Security headers
HSTS_MAX_AGE="31536000"
CONTENT_SECURITY_POLICY="default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:;"

# =================================================================
# MONITORING AND LOGGING - PRODUCTION
# =================================================================
LOG_LEVEL="warn"

# Production monitoring (configure if using external services)
# SENTRY_DSN="https://YOUR_SENTRY_DSN@sentry.io/PROJECT_ID"
# DATADOG_API_KEY="YOUR_DATADOG_API_KEY"
# NEW_RELIC_LICENSE_KEY="YOUR_NEW_RELIC_KEY"

# =================================================================
# PERFORMANCE OPTIMIZATION
# =================================================================
# Connection pooling for database
DATABASE_CONNECTION_LIMIT="20"
DATABASE_POOL_TIMEOUT="60000"

# Cache configuration
CACHE_TTL="300" # 5 minutes
REDIS_URL="redis://localhost:6379" # If using Redis

# =================================================================
# RATE LIMITING - PRODUCTION
# =================================================================
RATE_LIMIT_WINDOW="15" # minutes
RATE_LIMIT_MAX="1000" # requests per window per IP
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS="false"