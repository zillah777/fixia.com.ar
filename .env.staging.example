# =================================================================
# FIXIA - STAGING ENVIRONMENT VARIABLES
# =================================================================
# Staging environment for testing production-like configurations

# =================================================================
# DATABASE CONFIGURATION - STAGING
# =================================================================
# Staging Railway PostgreSQL connection string
DATABASE_URL="postgresql://postgres:RAILWAY_STAGING_PASSWORD@RAILWAY_STAGING_HOST:RAILWAY_PORT/railway"

# =================================================================
# JWT AUTHENTICATION - STAGING
# =================================================================
# Different JWT secret for staging
JWT_SECRET="STAGING_JWT_SECRET_DIFFERENT_FROM_PRODUCTION"
JWT_EXPIRES_IN="7d"

# =================================================================
# API CONFIGURATION - STAGING
# =================================================================
NODE_ENV="staging"
PORT="3001"
API_PREFIX=""

# Staging CORS origins
ALLOWED_ORIGINS="https://staging.fixia.com.ar,https://preview.fixia.com.ar"

# =================================================================
# FRONTEND CONFIGURATION - STAGING
# =================================================================
# Staging API URL
VITE_API_URL="https://api-staging.fixia.com.ar"
VITE_APP_NAME="Fixia (Staging)"
VITE_APP_VERSION="1.0.0-staging"

# IMPORTANT: Always use www subdomain for FRONTEND_URL to prevent 301 redirects
# from losing path information (e.g., verification tokens in email links)
FRONTEND_URL="https://staging.fixia.com.ar"

# =================================================================
# DEVELOPMENT FEATURES - STAGING
# =================================================================
# Enable additional logging and debugging in staging
LOG_LEVEL="debug"

# Enable API documentation in staging
ENABLE_SWAGGER="true"

# =================================================================
# TESTING CONFIGURATION
# =================================================================
# Test data and features enabled in staging
ENABLE_TEST_DATA="true"
TEST_USER_EMAIL="test@fixia.com.ar"

# =================================================================
# MONITORING - STAGING
# =================================================================
# Separate monitoring for staging environment
# SENTRY_DSN="https://YOUR_STAGING_SENTRY_DSN@sentry.io/STAGING_PROJECT_ID"