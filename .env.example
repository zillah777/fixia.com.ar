# =================================================================
# FIXIA MONOREPO - ENVIRONMENT VARIABLES TEMPLATE
# =================================================================
# Copy this file to .env and fill in your actual values
# Different environments will have different values for these variables

# =================================================================
# DATABASE CONFIGURATION
# =================================================================
# PostgreSQL connection string for Prisma
# Production: Use Railway PostgreSQL URL
# Development: Use local PostgreSQL instance
DATABASE_URL="postgresql://username:password@localhost:5432/fixia_db"

# =================================================================
# JWT AUTHENTICATION
# =================================================================
# Secret for signing JWT tokens - MUST be strong and unique per environment
# Generate using: openssl rand -base64 32
JWT_SECRET="your-super-secret-jwt-key-here"
JWT_EXPIRES_IN="7d"

# =================================================================
# API CONFIGURATION
# =================================================================
# API Server configuration
NODE_ENV="development"
PORT="4000"
API_PREFIX=""

# CORS allowed origins (comma-separated for multiple origins)
# Production: https://fixia.com.ar,https://www.fixia.com.ar
# Development: http://localhost:3000,http://localhost:5173
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:5173"

# =================================================================
# FRONTEND CONFIGURATION (for apps/web)
# =================================================================
# API URL that frontend will use to connect to backend
# Production: https://api.fixia.com.ar
# Development: http://localhost:4000
VITE_API_URL="http://localhost:4000"

# App configuration
VITE_APP_NAME="Fixia"
VITE_APP_VERSION="1.0.0"

# =================================================================
# DEPLOYMENT SECRETS (GitHub Actions)
# =================================================================
# These should be set in GitHub Secrets, not in .env files

# Vercel deployment
VERCEL_TOKEN="your-vercel-token"
VERCEL_ORG_ID="your-vercel-org-id"
VERCEL_PROJECT_ID="your-vercel-project-id"

# Railway deployment
RAILWAY_TOKEN="your-railway-token"
RAILWAY_TOKEN_STAGING="your-railway-staging-token"

# Health check URLs for CI/CD
API_URL="https://api.fixia.com.ar"
FRONTEND_URL="https://fixia.com.ar"
STAGING_API_URL="https://api-staging.fixia.com.ar"

# =================================================================
# OPTIONAL CONFIGURATIONS
# =================================================================
# Email configuration (if implementing email features)
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT="587"
# SMTP_USER="noreply@fixia.com.ar"
# SMTP_PASS="your-email-password"

# File upload configuration (if implementing file uploads)
# MAX_FILE_SIZE="5242880" # 5MB in bytes
# ALLOWED_FILE_TYPES="image/jpeg,image/png,application/pdf"

# Rate limiting (if implementing rate limiting)
# RATE_LIMIT_WINDOW="15" # minutes
# RATE_LIMIT_MAX="100" # requests per window

# =================================================================
# MONITORING AND LOGGING
# =================================================================
# Log level for application
LOG_LEVEL="info"

# External monitoring services (optional)
# SENTRY_DSN="your-sentry-dsn"
# DATADOG_API_KEY="your-datadog-key"