# Database
DATABASE_URL="postgresql://username:password@localhost:5432/fixia_dev?schema=public"

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRATION="7d"
JWT_REFRESH_SECRET="your-super-secret-refresh-jwt-key-change-in-production"
JWT_REFRESH_EXPIRATION="30d"

# App
NODE_ENV="development"
PORT=4000
API_PREFIX=""

# CORS - Updated for fixia.app domain migration
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:5173,https://fixia.app,https://www.fixia.app,https://fixia.com.ar,https://www.fixia.com.ar"

# Email Configuration - Resend API (Primary - HTTP based, works with Railway)
RESEND_API_KEY="re_xxxxxxxxx"
EMAIL_FROM="no-reply@fixia.app"

# Email addresses for different purposes
EMAIL_SUPPORT="soporte@fixia.app"
EMAIL_CONTACT="contacto@fixia.app"
EMAIL_PRIVACY="privacidad@fixia.app"
EMAIL_COMMERCIAL="comercial@fixia.app"
EMAIL_NO_REPLY="no-reply@fixia.app"

# Email Configuration - SendGrid (Secondary)
SENDGRID_API_KEY="your-sendgrid-api-key-here"

# Email Configuration - Gmail SMTP (Fallback - likely blocked on Railway)
GMAIL_USER="your-gmail@gmail.com"
GMAIL_APP_PASSWORD="your-gmail-app-password"

# App URLs - Updated for fixia.app domain migration
FRONTEND_URL="https://fixia.app"
APP_URL="https://fixia.app"
API_URL="https://api.fixia.app"

# Development URLs (for local development)
FRONTEND_URL_DEV="http://localhost:3000"
APP_URL_DEV="http://localhost:3000"
API_URL_DEV="http://localhost:4000"

# Development Settings
LOG_LEVEL="debug"

# Railway Production (set these in Railway dashboard)
# DATABASE_URL will be provided by Railway PostgreSQL plugin
# Remember to set all JWT secrets and SendGrid config in Railway environment variables