# Database
DATABASE_URL="postgresql://username:password@localhost:5432/fixia_dev?schema=public"

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRATION="7d"
JWT_REFRESH_SECRET="your-super-secret-refresh-jwt-key-change-in-production"
JWT_REFRESH_EXPIRATION="30d"

# App
NODE_ENV="development"
PORT=4000
API_PREFIX=""

# CORS
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:5173,https://fixia.com.ar,https://www.fixia.com.ar"

# Email Configuration - Resend API (Primary - HTTP based, works with Railway)
RESEND_API_KEY="re_xxxxxxxxx"
EMAIL_FROM="your-verified-sender-email@domain.com"

# Email Configuration - SendGrid (Secondary)
SENDGRID_API_KEY="your-sendgrid-api-key-here"

# Email Configuration - Gmail SMTP (Fallback - likely blocked on Railway)
GMAIL_USER="your-gmail@gmail.com"
GMAIL_APP_PASSWORD="your-gmail-app-password"

# App URLs
FRONTEND_URL="http://localhost:3000"
APP_URL="http://localhost:3000"

# Development Settings
LOG_LEVEL="debug"

# Railway Production (set these in Railway dashboard)
# DATABASE_URL will be provided by Railway PostgreSQL plugin
# Remember to set all JWT secrets and SendGrid config in Railway environment variables